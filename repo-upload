#!/bin/bash -x

REPONAME=modeler
WEBHOST=ftp.webspace.virginmedia.com
USERNAME=
PASSWORD=
ARCH=$(uname -m)
REPO=${HOME}/Repo

cp $1 ${HOME}/${REPO}/${ARCH}
cd ${HOME}/${REPO}/${ARCH}

repo-add ${REPONAME}.db.tar.xz $1

cat << EOF | ftp -n ${WEBHOST}
user ${USERNAME} ${PASSWORD}
cd ${REPONAME}/${ARCH}
hash
put ${REPONAME}.db
put ${REPONAME}.db.tar.xz
put $1
EOF

